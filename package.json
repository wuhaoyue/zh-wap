{
  "name": "dgg-platform-nuxt-pc",
  "version": "1.0.0",
  "description": "My badass Nuxt.js project",
  "author": "wanglihui",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development NODE_ENV__ENV=development nodemon server/index.js --watch server",
    "dev:release": "cross-env NODE_ENV=development NODE_ENV__ENV=release nodemon server/index.js --watch server",
    "dev:production": "cross-env NODE_ENV=development NODE_ENV__ENV=production nodemon server/index.js --watch server",
    "build": "cross-env NODE_ENV=production NODE_ENV__ENV=development nuxt build",
    "build:release": "cross-env NODE_ENV=production NODE_ENV__ENV=release nuxt build",
    "build:production": "cross-env NODE_ENV=production NODE_ENV__ENV=production nuxt build",
    "start": "cross-env NODE_ENV=production NODE_ENV__ENV=development node server/index.js",
    "start:release": "cross-env NODE_ENV=production NODE_ENV__ENV=release node server/index.js",
    "start:production": "cross-env NODE_ENV=production NODE_ENV__ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.9.7",
    "@nuxtjs/style-resources": "^1.0.0",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "nuxt": "^2.12.2",
    "qs": "^6.9.3"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@vue/test-utils": "^1.0.0-beta.33",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-nuxt": ">=0.5.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "vue-jest": "^3.0.5"
  }
}
